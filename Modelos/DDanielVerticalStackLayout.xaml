<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvaluacionP3DiazDaniel.DDanielVerticalStackLayout"
             Title="DDanielVerticalStackLayout">
    <VerticalStackLayout>
        <Entry x:Name="DDaniel_IngresePais"
               Placeholder="Ingrese el nombre del pais"/>
        <Button x:Name="DDaniel_BtnBuscar"
                Text="Buscar"
                Command="{Binding BuscarCommand}"/>
        <Button x:Name="DDaniel_BtnLimpiar"
                Text="Limpiar"
                Command="{Binding LimpiarCommand}"/>
        <Label x:Name="DDaniel_LblResultado"
               Text="{Binding Resultado}"/>
    </VerticalStackLayout>
</ContentPage>